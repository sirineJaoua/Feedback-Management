@model List<String>

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<div>

    <hr />
    <dl class="dl-horizontal">
        @for (int i = 0; i < Model.Count; i += 2)
        {
            <dt>
                <span >@Model[i] :</span>
                @if (i + 1 < Model.Count)
                {
                    <span style="font-weight: lighter">@Model[i + 1]</span>
                }
            </dt>
        }
    </dl>
</div>

